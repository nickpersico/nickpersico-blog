{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

<header class="blog-header">

    {{! Each post has the blog logo at the top, with a link back to the home page }}
    <a class="blog-logo" href="{{@blog.url}}">
        {{#if @blog.logo}}
            <img src="{{@blog.logo}}" alt="Blog Logo" />
        {{else}}
            {{@blog.title}}
        {{/if}}
    </a>

    <h3 class="blog-description" style="color: #565656; margin-top: 25px;"><i>A series of essays about sales, startups, & general banter by <a href="http://www.twitter.com/nickpersico">Nick Persico</a></i></h3>

</header>

<main class="content single-post" role="main" style="margin-top: -75px;">

    <article class="{{post_class}}">
    
        {{! Everything inside the #post tags pulls data from the post }}
        {{#post}}

        {{! Everything below outputs content of the the post which has been published }}
        <p class="post-date"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format='DD MMM YYYY'}}</time></p>

        <h1 class="post-title">{{{title}}}</h1>

        <section class="post-content">
            {{content}}
        </section>

        <footer class="post-footer">

            {{! Email Subscription }}
                    <div style="width: 550px; margin-left: 45px; padding-top: 35px; padding-bottom: 35px;">
                        <form action="//nickpersico.us8.list-manage.com/subscribe/post?u=9933cf8ec7116f935a0aefa5f&amp;id=296bb084d9" method="post" novalidate>
                    <div class="email-div-left">
                        <input type="email" value="" name="EMAIL" id="mce-EMAIL" class="email-add" placeholder="Email Address">
                    </div>
                    <div class="email-div-right">
                        <input type="submit" value="Subscribe For Updates" name="subscribe" id="mc-embedded-subscribe" class="email-sub">
                    </div>
                     </form>
                    </div>            

            <section class="share">
                <h4>Share this post</h4>
                <a class="icon-twitter" href="https://twitter.com/share?text={{title}}&url={{url absolute="true"}}"
                    onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                    <span class="hidden">Twitter</span>
                </a>
                <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                    onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                    <span class="hidden">Facebook</span>
                </a>
                <a class="icon-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
                   onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                    <span class="hidden">Google+</span>
                </a>
            </section>                

            {{#if tags}}<p class="post-tags wrap-full"><strong>Tags:</strong> {{tags separator=", "}}</p>{{/if}}

        </footer>

        {{#if author}}
            <div id="author-block" class="wrap-full {{#if author.image}}author-has-img{{/if}}" 
                {{#if author.cover}}style="background-image: url({{author.cover}});"{{/if}}>
                {{#if author.image}} 
                    <div class="author-img">
                        <img src="{{author.image}}" alt="Profile of {{author.name}}">
                    </div>
                {{/if}}

                <div class="author-wrap">
                    <h4 class="author-name">{{author.name}}</h4>
                    <p class="author-bio">{{author.bio}}</p>
                    </div>
            
            </div>
        {{/if}}   

        {{/post}}

<div id="disqus_thread" style="z-index: 1001;"></div>
<script type="text/javascript">
    var disqus_shortname = 'nickpersico'; // required: replace example with your forum shortname
    var disqus_identifier = '{{post.id}}';
 
    /* * * DON'T EDIT BELOW THIS LINE * * */
    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
</script>
    </article>

</main>
